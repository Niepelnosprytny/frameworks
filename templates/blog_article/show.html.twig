{% extends 'blog_article/full.html.twig' %}

{% block title %}Blog article{% endblock %}

{% block body %}
    <h1>Blog article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_article.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog_article.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ blog_article.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ blog_article.createdAt ? blog_article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog_article.author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_article_index') }}">back to list</a>

    <a href="{{ path('app_blog_article_edit', {'id': blog_article.id}) }}">edit</a>

    {{ include('blog_article/_delete_form.html.twig') }}
{% endblock %}
